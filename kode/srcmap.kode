coffeePos = (mapData, sjsLine, sjsCol) ->
    
    lines = mapData.mappings.split ';'
    jsLine = 1
    coLine = 1
    coCol  = 0
    for line in lines
        jsCol = 0
        if line.length
            for segment in line.split ','
                seg = decode segment
                jsCol  += seg[0]
                coLine += seg[2]
                coCol  += seg[3]
                if jsLine == sjsLine and jsCol >= sjsCol
                    return line:coLine, col:coCol
        if jsLine == sjsLine
            return line:coLine, col:0
        jsLine++
    line:0, col:0

