decode = (segment) ->
    # ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789+/
    rs = []
    sh = rc = 0
    for i in [0...segment.length]
        cc = segment.charCodeAt(i)-65
        cc -= 6  if cc >=  32
        cc  = 62 if cc == -22
        cc  = 63 if cc == -18
        cc += 69 if cc < 0
        if cc & 32
            sh += 5
            rc = cc & 0b011111
        else
            vl = rc + (cc << sh)
            vs = vl >> 1
            vs = -vs if vl & 1
            rs.push vs
            sh = rc = 0
    rs
    
