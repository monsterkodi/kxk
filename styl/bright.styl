.popup
    background-color    frameColor

.popupWindow
    background-color    frameColor

.popupItem
    color               textBlurColor
    &:not(:last-child)
        border-bottom   1px solid frameColor
    &.separator
        border-top      1px solid titleColor
    &.selected
        color           textFocusColor
        & .popupCombo
            color       textBlurColor

.popupItem:active
    color               textFocusColor

.popupCombo
    color               bgColor
    
